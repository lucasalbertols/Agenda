@model DesafioTechZoe.Models.TaskModel

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover</h1>

<h3>Você tem certeza que deseja remover?</h3>
<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Concluído?
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsCompleted)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover" class="btn btn-danger btn-sm" /> |
        <a class="btn btn-outline-secondary btn-sm" asp-action="Index">Voltar</a>
    </form>
</div>
